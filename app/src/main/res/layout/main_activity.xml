    <androidx.cardview.widget.CardView
        android:id="@+id/stop_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:elevation="8dp"
        app:cardBackgroundColor="@color/secondaryColor"
        app:cardCornerRadius="15dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/stop_button_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:src="@drawable/ic_baseline_power_settings_new_24" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/refresh_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="16dp"
        android:elevation="8dp"
        app:cardBackgroundColor="@color/secondaryColor"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/div">

        <ImageView
            android:id="@+id/refresh_button_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:src="@drawable/ic_baseline_refresh_24" />
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/volumeIcon"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="1dp"
        android:src="@drawable/ic_baseline_volume_up_24"
        app:layout_constraintBottom_toBottomOf="@+id/currentVolume"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/currentVolume" />

    <TextView
        android:id="@+id/currentVolume"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Volume"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@id/volumeIcon"
        app:layout_constraintTop_toBottomOf="@+id/div2" />

<!--    <TextView-->
<!--        android:id="@+id/title"-->
